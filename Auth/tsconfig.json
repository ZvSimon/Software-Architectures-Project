{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "sourceMap": true
  },
  "type": "module",
  "include": ["**/*.ts", "prisma/seed.mjs"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist"]
}
